<!--pages/mine/mine.wxml-->
<view class="info">
	<image class="info-profile" src="{{headUrl}}" mode="aspectFill"></image>
	<view class="info-person">
		<button wx:if="{{!isLogin}}" bindtap="goLogin">登录/注册</button>
		<block wx:else>
			<text class="info-nickname">{{username}}</text>
			<text class="info-mobile"></text>
		</block>
	</view>
</view>
<text class="coupon">我的优惠券</text>
<view class="price">
	<view class="price-info">
		<text class="price-text">交易金额</text>
		<text class="price-amount">1000.00</text>
	</view>
	<text class="price-btn">查看订单</text>
</view>
<block wx:for="{{items}}" wx:key="index">
	<view class="func-item">
		<text class="iconfont {{item.icon}}"></text>
		<text class="func-text">{{item.text}}</text>
		<text class="iconfont {{item.rightIcon}}"></text>
	</view>
</block>