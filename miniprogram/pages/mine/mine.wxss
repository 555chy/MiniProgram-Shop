/* pages/mine/mine.wxss */
.info {
  height: 300rpx;
  /* background-color: #41AAE1; */
  background-image: url('https://img-blog.csdnimg.cn/20200527113438614.png');
  background-size: 100% 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.btnlogin{
  margin-top: 100rpx;
}

.info-profile {
  margin: 40rpx;
  width: 170rpx;
  height: 170rpx;
  border-radius: 85rpx;
  background-color: #ADD8FF;
  border: 2rpx solid lightblue;
}

.info-person {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.info-nickname {
  font-size: 38rpx;
  font-weight: bold;
  padding-bottom: 20rpx;
}

.info-mobile {
  padding-bottom: 60rpx;
  font-size: small;
}

.text-button {
  background-color: transparent;
  font-weight: normal;
  text-align: start;
  padding: 0 !important;
  margin: 0 !important;
}

.coupon {
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  font-size: small;
  padding: 40rpx 30rpx;
}

.price {
  width: 80%;
  height: 150rpx;
  margin: -50rpx auto 10rpx auto;
  border-radius: 20rpx;
  background-image: linear-gradient(to bottom right, #94C5F2, #62A4E3);
  background-color: rgb(245, 227, 126);
  padding: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
}
.vline {
  background-color: lightgray;
  width: 1px;
  height: 200rpx;
}
.price-info {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.price-amount {
  margin-top: 30rpx;
  font-weight: bold;
  font-size: 50rpx;

}

.price-btn {
  padding-left: 60rpx;
  padding-right: 10rpx;
  border-left: 2rpx solid rgba(85, 85, 85, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.func-item {
  margin: 0 50rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 30rpx;
  padding-top: 30rpx;
}

.func-text {
  flex-grow: 1;
  padding: 0 20rpx !important;
}

.price-text{
  font-size: 40rpx;
}