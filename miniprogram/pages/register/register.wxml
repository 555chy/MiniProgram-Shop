<view class="profile-box">
	<image  class="profile" src="{{headimg}}" ></image>
</view>

<view class="box">
	<view class="input-box">
		<text class="iconfont icon-zhuceyonghu"></text>
		<input class="input" placeholder="{{username}}" bindinput="getUsername" />
	</view>
	<view class="input-box">
		<text class="iconfont icon-mima-1"></text>
		<input class="input" placeholder="密码" bindinput="getPassword" password="true"></input>
	</view>
	<view class="input-box">
		<text class="iconfont icon-mima-1"></text>
		<input class="input" placeholder="确认密码" bindinput="getConfirm" password="true"></input>
	</view>
	<view class="input-box" >
		<text class="iconfont icon-zhuceyonghu"></text>
		<input class="input" placeholder="电话" bindinput="getPhoneNumber" type="number"></input>
	</view>
	
	<button class="register" bindtap="register" disabled="{{disable}}">马上注册</button>

	<view class="back">
			<view class="login-box">已有账号,</view>
			<view class="login" bindtap="goLogin">马上登录</view>
	</view>

</view>