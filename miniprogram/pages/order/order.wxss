/* pages/find/find.wxss */
page{
  height: 100%;
  width: 100%;
}
.content{
  display: flex;
  display: -webkit-flex;
  background-color: RGBA(242, 242, 242, 1);
  flex-direction: column;
  height: 100%;
}

.tab-content{
  background-color: RGBA(242, 242, 242, 1);
  padding-top: 35rpx;
  padding-bottom: 35rpx;
}

.tab-title {
  padding-top: 20rpx;
  display: flex;
  background-color: white;
  justify-content: space-around;
  align-items: flex-start;
  flex:0 0 auto
}
.tab-item {
  display: flex;
  flex-direction: column;
  padding-left: 50rpx;
  padding-right: 50rpx;
}
.tab-active {
  font-weight: bold;
}

.tab-line {
  margin: 20rpx auto;
  width: 90rpx;
  height: 5rpx;
  background-color: rgba(40,137,199,1);
}

/* content */
.order-item {
  
  padding: 30rpx 0 30rpx 30rpx;
  margin-bottom: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
  box-shadow: 1px 1px 5px lightgray;
  background-color: white;
  display: flex;
  justify-content: flex-start;
  align-items: shrink;
  font-size: small;
}

.garbage {
  width: 130rpx;
  height: 130rpx;
  background-color: red;
  color: white;
  border-radius: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}
.red {
  background-color: rgba(250, 60, 60, 1);
}
.green {
  background-color: rgba(70, 210, 88, 1);
}
.orange{
  background-color: rgba(255, 179, 100, 1)
}

.info {
  width: 100%;
  margin: 0 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}
.address {
  font-weight: bold;
  margin-bottom: 20rpx;
  flex-grow: 1;

  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.time {
  font-size: x-small;
  color: gray;
  border-bottom: 1px solid lightgray;
  padding: 10rpx 0;
  margin-bottom: 30rpx;
}
.desc {
  font-size: x-small;
  color: gray;
}

.bottom{
  display: flex;
  flex-direction: column;
  flex: 1 1 auto;
}
.tab-content {
  display: flex !important;
  flex-direction: column;
}