map{
  width: 100%;
  height: 100vh;
}
.box {
  width: 100%;
  border-radius: 50rpx 50rpx 0 0;
  background-color: white;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: stretch;
  border: 1px solid lightgray;
  font-size: small;
}
.title {
  justify-content: center !important;
  font-weight: bold;
  padding: 30rpx !important;
}
.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid lightgray;
  margin: 0 20rpx;
}
.img {
  width: 300rpx;
  height: 200rpx;
}
.do {
  width: 100%;
  color: white;
  background: rgba(90, 174, 227, 1);
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.name {
  width: 150rpx;
  flex-shrink: 0;
}

