<!--pages/login/login.wxml-->
<image class="icon" src="https://dss1.baidu.com/6ONXsjip0QIZ8tyhnq/it/u=1491030499,2054192443&fm=85&app=79&f=JPEG?w=121&h=75&s=8706D507F06188A39EA8857703004063"/>
<view class="box">
  <view class="input-box">
    <text class="iconfont icon-zhuceyonghu"></text>
    <input class="username" bindinput="getUsername" placeholder="请输入用户名"/>
  </view>
  <view class="input-box">
    <text class="iconfont icon-mima-1"></text>
    <input class="password" bindinput="getPassword" placeholder="请输入密码"/>
  </view>
  <text class="forget">忘记密码</text>
  <button class="login" bindtap="login">登录</button>
  <text class="register-box" bindtap="register">还没有账号, <text class="register">现在注册</text></text>
</view>







