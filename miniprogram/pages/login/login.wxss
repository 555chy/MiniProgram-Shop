.icon {
  width: 400rpx;
  height: 400rpx;
  display: flex;
  margin: 80rpx auto;
}

.box{
  padding: 50rpx;
  margin: 0rpx 50rpx;
  border-radius: 20rpx;
  box-shadow:0 4rpx 8rpx 0 rgba(186,94,2,0.15), 0 6rpx 30rpx 0 rgba(186,94,2,0.1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.iconfont {
  padding-right: 30rpx;
}

.input-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}

.username, .password {
  padding: 10rpx;
  border-bottom: 1rpx solid lightgrey;
  width: 100%;
}

.forget {
  color: gray;
  font-size: small;
  align-self: flex-end;
  margin-bottom: 40rpx;
}

.login {
  font-weight: lighter;
  width: 100% !important;
  padding: 15rpx;
  color: white;
  border-radius: 60rpx; 
  background: linear-gradient(rgba(91, 174, 227, 1), rgba(91, 174, 220, 1));
  display: block;
}

.ress{
  margin-top: 40rpx;
  text-align: center;
  display: flex;
  flex-wrap: nowrap;
}
.register-box {
  font-size: small;
}
.register {
  color: rgba(91, 174, 227, 1);
  font-size: small;
  background-color: transparent;
  font-weight: normal;
  text-align: start;
  padding: 0 !important;
  margin: 0 !important;
  width: auto !important;
}



image{
  width: 381rpx;
  height: 320rpx;
}