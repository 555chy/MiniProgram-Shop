.top{
  width: 100%;
  height: 380rpx;
}

.bottom{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 30rpx;
  
}

.box{
  width: 310rpx;
  height: 350rpx;
  padding: 10rpx;
}

.input{
  width: 100%;
  background-color: white;
  margin-top: 30rpx;
  border-radius: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;

}

.head{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}

.weui-search-bar {
  position: relative;
  padding: 15px 30px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: transparent;
  border-top: 0rpx solid #D7D6DC;
  border-bottom: 0rpx solid #D7D6DC;
}

.weui-icon-search {
  margin-right: 4px;
  font-size: inherit;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}

.weui-search-bar__text {
  display: inline-block;
  font-size: 16px;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
  border-radius: 20px;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
  display: flex;
}

.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
  flex-grow: 1;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9B9B9B;
  background: #FFFFFF;
  line-height: 28px;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  margin-right: 10px;
  line-height: 28px;
  font-size: small;
  color: green;
  white-space: nowrap;
}
